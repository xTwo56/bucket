generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id           String          @id  @default(uuid())
    username     String
    email        String          @unique
    password     String
    isSeller     Boolean
    seller       Seller?
  }

model Seller {
    id           String          @id  @default(uuid())
    products     Product[]
    rating       Float
    phone        String
    userId       String          @unique 
    user         User            @relation(fields:[userId], references:[id])
  }

model Product {
    id            String          @id  @default(uuid())
    name          String
    description   String
    price         String
    sellerId      String
    seller        Seller          @relation(fields:[sellerId], references: [id])
  }
